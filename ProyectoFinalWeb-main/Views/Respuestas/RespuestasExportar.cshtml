@model List<ProyectoWebFinal.DTOs.RespuestaDTO>

<h3>Exportar Encuestas</h3>

@if (Model == null)
{
    <p>Cargando...</p>
}
else if (Model.Count == 0)
{
    <p>No hay encuestas para exportar.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Sexo</th>
                <th>Identidad</th>
                <th>Departamento</th>
                <th>Ciudad</th>
                <th>Facultad</th>
                <th>Carrera</th>
                <th>Matricula</th>
                <th>Becado</th>
                <th>XII</th>
                <th>XIII</th>
                <th>XIV</th>
                <th>XV</th>
                <th>XVI</th>
                <th>XVII</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                <td>@r.Numero</td>
                    <td>@r.Nombre</td>
                    <td>@r.Apellido</td>
                    <td>@r.Sexo</td>
                    <td>@r.Identidad</td>
                    <td>@r.Departamento</td>
                    <td>@r.Ciudad</td>
                    <td>@r.Facultad</td>
                    <td>@r.Carrera</td>
                    <td>@r.Matricula</td>
                    <td>@r.Becado</td>
                    <td>@r.Xii</td>
                    <td>@r.Xiii</td>
                    <td>@r.Xiv</td>
                    <td>@r.Xv</td>
                    <td>@r.Xvi</td>
                    <td>@r.Xvii</td>
                    <td>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("ExportarPDF", "Respuestas", new { id = r.Numero })">PDF</a>
                        <a class="btn btn-success btn-sm" href="@Url.Action("ExportarExcel", "Respuestas", new { id = r.Numero })">EXCEL</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <h5>Exportar todas las encuestas:</h5>
    <a class="btn btn-danger me-2" href="@Url.Action("ExportarTodasPDF", "Respuestas")">Exportar todas a PDF</a>
    <a class="btn btn-success" href="@Url.Action("ExportarTodasExcel", "Respuestas")">Exportar todas a Excel</a>
}
